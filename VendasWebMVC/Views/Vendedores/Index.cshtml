@model IEnumerable<Vendedor>

@{
    ViewData["Title"] = "Vendedores";

}

<div class="row">
    <div class="col-sm-10">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col-sm-2">
        <br />
        <p>
            <a asp-action="Cadastro" class="btn btn-success"><span class="fas fa-plus"></span> Cadastrar vendedor</a>
        </p>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p></p>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <p></p>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <p></p>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    <p></p>
                    @Html.DisplayFor(modelItem => item.SalarioBase)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Detalhes" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                    <a class="btn btn-warning btn-sm" asp-action="Editar" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-danger btn-sm" asp-action="Remover" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>