@model IEnumerable<VendasWebMVC.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}

<div class="row"><br /></div>

<div class="row">
    <div class="col-sm-10">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col-sm-2">
        <br />
        <p>
            <a asp-action="Create" class="btn btn-success"><span class="fas fa-plus"></span> Cadastrar Departamento</a>
        </p>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th class="text-right">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p></p>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td class="text-right">
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
